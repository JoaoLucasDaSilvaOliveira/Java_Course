<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <timestamp key="dateTimeFormat" datePattern="HH-mm"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target> <!--OutputStream padrão-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                <!--Como estilizar as mensagens no console, ver documentação para mais informações-->
                %green(%d{HH:mm:ss}) %highlight(%-5level) %logger{36} - %boldWhite(%msg%n)
            </Pattern>
        </encoder>
    </appender>

