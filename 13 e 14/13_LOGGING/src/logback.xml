    <appender name="FILE_COM_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">-->
        <file>13_LOGGING/src/logs/rolling-file-appender.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>13_LOGGING/src/logs/rolling-file-appender_%d{mm}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{HH:mm:ss} %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="logging" level="trace" additivity="false">
        <appender-ref ref="CONSOLE"/>
<!--        <appender-ref ref="FILE"/>-->
    </logger>

    <logger name="rolling" level="warn" additivity="false">
        <appender-ref ref="FILE_COM_ROLLING"/>
    </logger>

</configuration>